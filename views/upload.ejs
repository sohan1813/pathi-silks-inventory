<%- include('layout', { body: `
  <h2>Upload Photos</h2>

  <form method="POST" action="/upload" enctype="multipart/form-data">
    <fieldset class="upload-gallery-type">
      <legend>Upload to</legend>

      <label>
        <input type="radio" name="galleryType" value="main" checked />
        Main gallery
      </label>

      <label>
        <input type="radio" name="galleryType" value="other" />
        Other albums
      </label>

      <label>
        <input type="radio" name="galleryType" value="sales" />
        Sales
      </label>
    </fieldset>

    <label>Brand / Main folder</label>
    <input type="text" name="brand" placeholder="e.g. Pathi Silks" required />

    <label>Person / Sub folder</label>
    <input type="text" name="person" placeholder="e.g. Sarika" required />

    <label>Date</label>
    <input type="date" name="date" required />

    <label>Select images</label>
    <input type="file" name="images" multiple accept="image/*" required />

    <button type="submit">Upload</button>
  </form>
` }) %>
